@model ConsoleApplication.Models.Student

<!DOCTYPE html>
<html lang="en">

<head>
    <title>Delete Student</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u"
        crossorigin="anonymous">
</head>
<body class="container" style="margin-top: 40px">
    <div class="jumbotron">
        <h1>Delete student</h1>
        <p>Are you sure you want to delete this student?</p>
    </div>
    <form asp-controler="Student" asp-action="Delete" method="POST" class="form-horizontal">
        <input class="form-control" type="Hidden" asp-for="StudentID">
        <div class="form-group">
            <label asp-for="FirstName" class="col-sm-2 control-label"></label>
            <div class="col-sn-10">
                <p class="form-control-static">@Model.FirstName</p>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="LastName" class="col-sm-2 control-label"></label>
            <div class="col-sn-10">
                <p class="form-control-static">@Model.LastName</p>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="EnrollmenDate" class="col-sm-2 control-label"></label>
            <div class="col-sn-10">
                <p class="form-control-static">@Model.EnrollmenDate</p>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Age" class="col-sm-2 control-label"></label>
            <div class="col-sn-10">
                <p class="form-control-static">@Model.Age</p>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-4">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a class="btn btn-info" asp-controller="Student" asp-action="index">Back to List</a>
            </div>
    </form>
</body>
</html>