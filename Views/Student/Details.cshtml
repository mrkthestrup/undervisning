@model ConsoleApplication.Models.Entities.Student

@{ 
    ViewBag.Title = "Details for: " + @Model.FirstName + " " +  @Model.LastName; 
    
}

<div class="row">
    <div class="col-md-4 col-md-offset-1">
            <h2>Student</h2> 
            <p><b>@Html.DisplayNameFor(model => model.FirstName):</b> @Model.FirstName @Model.LastName</p>
            <p><b>@Html.DisplayNameFor(model => model.LastName):</b> @Model.FirstName @Model.LastName</p>
            <p><b>@Html.DisplayNameFor(model => model.EnrollmenDate): </b>@Model.EnrollmenDate</p>
            <p><b>@Html.DisplayNameFor(model => model.Age): </b>@Model.Age</p>
    </div>
</div>
<div class="row">
    <div class="col-md-4 col-md-offset-1">
        <h1>Enrollments</h1>
        
           <div class="row">

            <div class="col-md-4">
                <h3>Title</h3>
            
    @foreach(var c in Model.Enrollments) {
    
       <p> @c.Course.Title</p>
    
    }
        </div>

        <div class="col-md-4">
                <h3>Grade</h3>

        @foreach(var c in Model.Enrollments) {
    
            @if(c.Grade == 0)
            {
                <p> - </p>
            } else {
                <p> @c.Grade</p>
            }
       
    
    }
    </div>
    </div>
    <a class="btn btn-primary" asp-controller="Student" asp-action="Course" asp-route-id=@Model.StudentID >Add Enrollments</a>
    <a class="btn btn-primary" asp-controller="Student" asp-action="Index" >Give Grade</a>
  
    </div>
</div>
